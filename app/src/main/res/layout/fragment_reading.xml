<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroolView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"

        >

        <!--Main Linear-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@drawable/circularbordersolid"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"

            >


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/readinglogo" />

            <!--Linear for Info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="IELTS Academic Reading information:"
                    android:textColor="@color/colorSecondary"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#25E38976"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            android:padding="10dip"
                            android:text="Time"
                            android:textColor="#e38978"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="60 minutes "
                            android:textColor="#e38978"
                            android:textSize="21sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:background="@color/white"
                            android:padding="10dip"
                            android:text="Questions"
                            android:textColor="#e38978"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:background="@color/white"
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="40"
                            android:textColor="#e38978"
                            android:textSize="21sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:padding="10dip"
                            android:text="Sections"
                            android:textColor="#e38978"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="3"
                            android:textColor="#e38978"
                            android:textSize="21sp"
                            android:textStyle="bold" />
                    </TableRow>

                </TableLayout>


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="IELTS Reading tests are different for Academic and General IELTS. As you may know, you should take IELTS Academic module if you're going to study abroad. And if you're intending to work abroad, then you should take IELTS General module. IELTS Academic reading is more challenging than IELTS General reading. "
                    android:textColor="@color/colorSecondary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Both General and Academic IELTS Reading tests have 3 sections with 40 questions in total. IELTS Reading test lasts 1 hour."
                    android:textColor="@color/colorSecondary"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"

                    app:cardBackgroundColor="#25E38976"
                    app:cardCornerRadius="5dp"
                    app:cardMaxElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_reading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:text="Reading Tast 1"
                        android:textColor="#e38978"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view6"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="#25E38976"
                    app:cardCornerRadius="5dp"
                    app:cardMaxElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_reading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:text="Reading Tast 2"
                        android:textColor="#e38978"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view7"
                    android:layout_width="150dp"
                    android:layout_height="150dp"

                    app:cardBackgroundColor="#25E38976"
                    app:cardCornerRadius="5dp"
                    app:cardMaxElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_reading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:text="Reading Tast 3"
                        android:textColor="#e38978"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view8"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="#25E38976"
                    app:cardCornerRadius="5dp"
                    app:cardMaxElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_reading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="10dp"
                        android:text="Reading Tast 4"
                        android:textColor="#e38978"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <!-- for Info-->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
